<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite use-query-string="true">

    <!-- do nothing to favicon.ico -->
    <rule>
       <from>/favicon.ico</from>
       <to>null</to>
    </rule>

    <!-- everything else goes to docs, except /idp -->
    <rule>
       <from>(^(?!/idp/).*)</from>
       <to type="redirect">https://docs.shib.ncsu.edu$1</to>
    </rule>

</urlrewrite>

